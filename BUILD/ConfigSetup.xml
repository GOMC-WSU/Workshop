<configuration>
    <HTS>false</HTS> <!-- Activate the High Throughput Screening -->

    <mofname>EDUSIF_clean_min.cif</mofname> <!-- Must be defined in building only one MOF system -->
    
    <model>Universal</model> <!-- Topology and Paramter Keyword. -->

    <rcut>12.0</rcut> <!-- Cutoff value -->

    <lrc>False</lrc> <!-- Long range correction activation -->

    <electrostatic>false</electrostatic> <!-- Ewald summation acctivation -->

    <tolerance>0.00001</tolerance> <!-- Tolerance value for Ewald summation -->

    <supercelldim>
        <!-- Extending unit cell in X, Y, Z direction -->
        <x>2</x>
        <y>2</y>
        <z>2</z>
    </supercelldim>

    <adsorbate>
        <!-- Defining the name and residue name of adsorbate -->
        <name>argon</name>
        <resname>AR</resname>
    </adsorbate>

    <reservoir>
        <!-- Number of molecule in reservor with givven dimension -->
        <dim>60</dim>
        <number>1000</number>
    </reservoir>


    <steps>
        <!-- System run steps-->
        <runsteps>10000000</runsteps>
        <eqsteps>2000000</eqsteps>
        <coordfreq>1000000</coordfreq>
        <blockfreq>100000</blockfreq>
    </steps>

    <runs>
        <!-- Simulation id, temperature and fugacity for each run -->
        <!-- You can add or delete runs -->
        <run>
            <id>1</id>
            <fugacity>0.01</fugacity>
            <temperature>300</temperature>
        </run>
        <run>
            <id>2</id>
            <fugacity>0.1</fugacity>
            <temperature>300</temperature>
        </run>
        <run>
            <id>3</id>
            <fugacity>1.0</fugacity>
            <temperature>300</temperature>
        </run>
        <run>
            <id>4</id>
            <fugacity>10.0</fugacity>
            <temperature>300</temperature>
        </run>
    </runs>

</configuration>